{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.example.ts",
    "src/api/webhooks/**",
    "src/services/stripeWebhook.ts",
    "src/cli/testE2E.ts",
    "src/cli/exportV1.ts",
    "src/cli/crawlV1.ts",
    "src/cli/createSuperAdmin.ts",
    "src/workers/exportWorkerV1New.ts",
    "src/limits/**/*.test.ts",
    "src/exports/**/*test*",
    "src/exports/**/*example*",
    "src/persistence/db.ts",
    "src/persistence/local.ts",
    "src/workers/crawlWorker.ts",
    "src/cli/crawl.ts"
  ]
}
